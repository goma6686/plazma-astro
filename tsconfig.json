{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["astro/client", "node"],
    "strictNullChecks": true,
    "baseUrl": "src",
    "module": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
